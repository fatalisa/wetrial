{
  "name": "react-wetrial",
  "version": "0.0.1",
  "description": "wetrial通用组件、方法、样式",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint:ts": "tslint --fix -p tsconfig.json --exclude \"src/**/*.test.ts\"",
    "lint:style": "stylelint \"src/**/*.less\" --syntax less",
    "lint": "yarn lint:ts && yarn lint:style",
    "test": "jest --config jestconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wetrial/wetrial-base.git"
  },
  "keywords": [
    "react",
    "antd",
    "wetrial"
  ],
  "author": "xiexingen",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wetrial/wetrial-base/issues"
  },
  "homepage": "https://github.com/wetrial/wetrial-base#readme",
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "@types/react": "^16.8.4",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "stylelint-config-prettier": "^4.0.0",
    "stylelint-config-standard": "^18.2.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "antd": "^3.13.5",
    "react": "^16.8.2"
  },
  "files": [
    "lib/**/*"
  ],
  "lint-staged": {
    "**/*.{ts,tsx,json,less}": [
      "node ./scripts/lint-prettier.js",
      "git add"
    ],
    "src/**/*.{ts,tsx}": "yarn lint:ts",
    "src/**/*.less": "yarn lint:style"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  }
}
